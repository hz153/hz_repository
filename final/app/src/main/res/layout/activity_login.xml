<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/IDBoxComplex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_boder"
        android:backgroundTint="#E6E2E2"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3333"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="2dp"
            android:src="@drawable/ic_baseline_people_24" />

        <EditText
            android:id="@+id/ID_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="User ID"
            android:imeOptions="actionSearch"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/NickNameBoxComplex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_boder"
        android:backgroundTint="#E6E2E2"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/IDBoxComplex"
        tools:layout_editor_absoluteX="20dp"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:padding="2dp"
            android:src="@drawable/ic_baseline_people_24" />

        <EditText
            android:id="@+id/NickName_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="Nick Name (optional)"
            android:imeOptions="actionSearch"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/PasswordBoxComplex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_boder"
        android:backgroundTint="#E6E2E2"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NickNameBoxComplex"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:padding="2dp"
            android:src="@drawable/ic_baseline_vpn_key_24" />

        <EditText
            android:id="@+id/Pswd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="Password"
            android:password="true"
            android:imeOptions="actionSearch"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/LoginBtn"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:backgroundTint="#26A69A"
        android:drawableStart="@drawable/ic_baseline_login_24"
        android:text="登 录"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordBoxComplex"
        app:layout_constraintVertical_bias="0.59000003" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/IDBoxComplex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        tools:text="Welcome!" />


</androidx.constraintlayout.widget.ConstraintLayout>